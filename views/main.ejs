<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">
    <link href="https://fonts.googleapis.com/css?family=Niramit:300i,400,400i,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:500,500i,700,700i,800,900,900i" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU"
        crossorigin="anonymous">
    <title><%= pageTitle%></title>
    <link rel="stylesheet" href="css/stylesheet.css">

</head>

<body id="main">
    <!-- begin section menu -->
    <section class="menu-bar">
        <a class="logo-wrapper" href="/main">
            <img src="images/logo.png" alt="" class="menu-logo">
        </a>
        <div class="search-box">
            <div class="search-box-wrapper">             
                <div class="search-button">
                    <form action="/main-search" method="GET">    
                        <input autofocus type="text" placeholder="Search something..." name="search">
                        <i class="fas fa-search search-click"></i>
                        <a type="submit" class="fas fa-search search-trigger"></a>
                    </form>
                </div>
                <i class="fas fa-times close-button"></i>
            </div>
        </div>
        <div class="menu-options">
            <img src="/avatar/crop/<%= user.avataUrl%>" alt="#" class="m-user-avatar">
            <span class="user-name"><%= user.username%></span>
            <i class="fas fa-angle-down drop-down-button"></i>
        </div>
    </section>
    <div class="options-wrapper">
        
        <a href="/user-info-update" class="user-option">User</a>
        
        <a href="/logout"class="sign-out-option">Sign out</a>              
    </div>
    <div class="add-item-button fas fa-plus"></div>
    <!-- begin section food of the day -->
 
    <section class="header-carousel">
            <div class="opacity-bg"></div>
            <div class="carousel-slides">
                <div class="carousel-item active">
                    <div class="carousel-wrapper">
                        <div class="carousel-image item-1" style="background: url('/food-img/<%= foodOfTheDay[0].imageUrl%>'); background-position: center; background-size: cover;"></div>
                        <div class="carousel-content">
                            <div class="carousel-content-wrapper">
                                <div class="carousel-title">food of the day</div>
                                <div class="carousel-subtitle"><%= foodOfTheDay[0].title%></div>
                                <div class="social">
                                    <i class="far fa-heart carousel"><span class="heart-point"><%= foodOfTheDay[0].numLike%></span></i>
                                    <i class="far fa-comment-alt"><span><%= foodOfTheDay[0].numComm%></span></i>
                                </div>
                                <div class="carousel-info"><%= foodOfTheDay[0].content%></div>
                                <a class="carousel-button" href="/food-detail?foodId=<%= foodOfTheDay[0].foodId%>">Check it out</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="carousel-wrapper">
                        <div class="carousel-image item-1" style="background: url('/food-img/<%= foodOfTheDay[1].imageUrl%>'); background-position: center; background-size: cover;"></div>
                        <div class="carousel-content">
                            <div class="carousel-content-wrapper">
                                <div class="carousel-title">food of the day</div>
                                <div class="carousel-subtitle"><%= foodOfTheDay[1].title%></div>
                                <div class="social">
                                    <i class="far fa-heart carousel"><span class="heart-point"><%= foodOfTheDay[1].numLike%></span></i>
                                    <i class="far fa-comment-alt"><span><%= foodOfTheDay[1].numComm%></span></i>
                                </div>
                                <div class="carousel-info"><%= foodOfTheDay[1].content%></div>
                                <a class="carousel-button" href="/food-detail?foodId=<%= foodOfTheDay[1].foodId%>">Check it out</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="carousel-wrapper">
                        <div class="carousel-image item-1" style="background: url('/food-img/<%= foodOfTheDay[2].imageUrl%>'); background-position: center; background-size: cover;"></div>
                        <div class="carousel-content">
                            <div class="carousel-content-wrapper">
                                <div class="carousel-title">food of the day</div>
                                <div class="carousel-subtitle"><%= foodOfTheDay[2].title%></div>
                                <div class="social">
                                    <i class="far fa-heart carousel"><span class="heart-point"><%= foodOfTheDay[2].numLike%></span></i>
                                    <i class="far fa-comment-alt"><span><%= foodOfTheDay[2].numComm%></span></i>
                                </div>
                                <div class="carousel-info"><%= foodOfTheDay[2].content%></div>
                                <a class="carousel-button" href="/food-detail?foodId=<%= foodOfTheDay[2].foodId%>">Check it out</a>
                            </div>
                        </div>
                    </div>
                </div>
                <ul class="carousel-indicators">
                    <div class="circle"></div>
                    <div class="carousel-indicators-wrapper">
                        <li class="active">01</li>
                        <li>02</li>
                        <li>03</li>
                    </div>
                    <i class="fas fa-angle-down next-slide"></i>
                </ul>
        </section>


    
    <!-- begin card item -->
    <section class="list-items">
         <% foods.forEach(food => { %> 
        <div class="card-item">
            <img src="/food-img/<%= food.imageUrl%>" class="card-image" />
            <div class="card-gradient-bg"></div>
            <div class="card-title">
                <a href="/food-detail?foodId=<%= food.foodId%>" class="card-food"><%= food.title%></a>
                <a href="/food-detail?foodId=<%= food.foodId%>" class="card-author"><%= food.username%></a>
                <input type="hidden" value="<%= food.foodId%>" id="foodId">
            </div>
            <div class="card-social-icons">
                <i class="far fa-heart"><span><%= food.numLike%></span></i>
                <i class="far fa-comment-alt"><span><%= food.numComm%></span></i>
            </div>
        </div>
        <% })%>       
    </section>
    <!-- begin section upload product -->
    <i class="fas fa-times product-close-button"></i>
    <div class="dark-bg"></div>
    <section class="upload-post product">
        <div class="upload-white-bg"></div>
        <form action="/add-food" class="upload-post-form" enctype="multipart/form-data" method="POST">
            <div class="upload-images">
                <div class="images-container">
                    <div class="img-prev-wrapper">
                        <div class="images-preview"></div>
                    </div>
                </div>
                <div class="input-image-wrapper">
                    <input required multiple accept="image/*" type="file" name="img-foods" class="choose-img" onchange="preview_images(this)">  
                </div>                           
            </div>
            <div class="post-caption">
                <div class="post-caption-container">
                    <input required class="p-food-name" type="text" placeholder="Title" name="title">
                    <textarea class="p-food-caption" placeholder="Say something about it..." name="content" rows="10" cols="30"></textarea>
                    <button type="submit" class="p-submit-button">post</button>
                </div>
            </div>
        </form>
    </section>
        <script src="scripts/main.js"></script>
</body>

</html>